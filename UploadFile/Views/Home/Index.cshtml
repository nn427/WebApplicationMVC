@model IEnumerable<System.IO.FileInfo>

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>圖像上傳</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

	<style>
		div {
			width: 220px;
			height: 170px;
			background-color: beige;
			padding: 10px;
			margin: 10px;
			text-align: center;
			float: left;
		}

		img {
			width: 200px;
			height: 150px;
		}
	</style>
</head>
<body>
	<div class="container mt-3">
		<h2>圖像上傳</h2>
		
		<form method="post" action="@Url.Action("Index")" enctype="multipart/form-data">
			<p>請選擇上傳的圖檔</p>
			<p><input type="file" name="formFile" /></p>
			<p><input type="submit" value="檔案上傳" /></p>
		</form>

		@foreach (FileInfo info in Model)
		{
			<div>
				<img src="~/images/@info.Name"><br>
				@info.Name.Split('.')[0]
			</div>
		}
</body>
</html>



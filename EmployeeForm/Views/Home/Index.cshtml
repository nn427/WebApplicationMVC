@model IEnumerable<DBLibrary.Models.Employee>

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>員工資料表</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
	<div class="container mt-3">
		<h2>員工表</h2>
		<p>
			<a href="@Url.Action("Create")" class="btn btn-info text-white">新增員工</a>
		</p>

		@if (Model.Count() != 0)
		{
			<table class="table table-hover mt-3">
				<thead>
					<tr class="table-primary">
						<td>
							@Html.LabelFor(m => m.FirstOrDefault().EmpId)
						</td>
						<td>
							@Html.LabelFor(m => m.FirstOrDefault().Name)
						</td>
						<td>
							@Html.LabelFor(m => m.FirstOrDefault().Salary)
						</td>
						<td></td>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.EmpId</td>
							<td>@item.Name</td>
							<td>@item.Salary</td>
							<td>
								<a href="@Url.Action("Edit")?empId=@item.EmpId" class="btn btn-warning">編輯</a>
								<a href="@Url.Action("Delete")?empId=@item.EmpId" class="btn btn-danger">X</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		}
		else
		{
			<div class="alert alert-success">
				<strong>目前沒有員工紀錄!</strong>
			</div>
		}
</body>
</html>


 